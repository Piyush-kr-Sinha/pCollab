<!-- import { useEffect, useState } from "react";
import Style from "./Style.css";
export default function Resize() {
  const [sizeWidth, setSizeWidth] = useState(window.screen.width);
  const [sizeHeight, setSizeHeight] = useState(window.screen.height);

  //  define the function currentSIze
  const currentSize = () => {
    setSizeWidth(window.innerWidth);
    setSizeHeight(window.innerHeight);
  };
  useEffect(() => {
    // add eventlistner when we do resize of window screen
    window.addEventListener("resize", currentSize);

    // this is to remove eventListner from eventlistner
    // list present in inspect if we dont do it then
    // it take soo much space in browser

    return () => {
      window.removeEventListener("resize", currentSize);
    };
  });
  return (
    <div id="mainCont">
      <p>The current width of window is : {sizeWidth}</p>
      <p>The current Height of window is : {sizeHeight}</p>
    </div>
  );
} -->


