<!-- import style from "./Style.css";
import { useState } from "react";
export default function DragDrop() {
  const [drg, setDrg] = useState("Please drag me into the box");
  return (
    <div id="mainCont">
      <div
        id="dragCont"
        draggable="true"
        onDragStart={(e) => {
          e.dataTransfer.setData("text", e.target.id);
        }}>
        {drg}
      </div>
      <div
        id="disp"
        // after dropping
        onDragOver={(e) => {
          e.preventDefault();
          setDrg("Thank you for sucessful drag");
        }}
        // event handler when dragged item is dragged to the targeted item
        onDrop={(e) => {
          e.preventDefault();
          const data = e.dataTransfer.getData("text");
          e.target.appendChild(document.getElementById(data));
        }}>
        <p>Drop it here</p>
      </div>
    </div>
  );
} -->


